#include <stdio.h>
#include <math.h>

int main() {
    int choice;
    float a, b;

    printf("Menu:\n");
    printf("1. Addition\n");
    printf("2. Subtraction\n");
    printf("3. Multiplication\n");
    printf("4. Division\n");
    printf("5. Square\n");
    printf("6. Cube\n");
    printf("7. Square Root\n");
    printf("8. Power\n");
    printf("9. Absolute Value\n");

    printf("\nEnter your choice: ");
    scanf("%d", &choice);

    switch (choice) {

        case 1:
            printf("Enter two numbers: ");
            scanf("%f %f", &a, &b);
            printf("Result = %.2f", a + b);
            break;

        case 2:
            printf("Enter two numbers: ");
            scanf("%f %f", &a, &b);
            printf("Result = %.2f", a - b);
            break;

        case 3:
            printf("Enter two numbers: ");
            scanf("%f %f", &a, &b);
            printf("Result = %.2f", a * b);
            break;

        case 4:
            printf("Enter two numbers: ");
            scanf("%f %f", &a, &b);
            if (b == 0)
                printf("Division by zero not allowed");
            else
                printf("Result = %.2f", a / b);
            break;

        case 5:
            printf("Enter a number: ");
            scanf("%f", &a);
            printf("Square = %.2f", a * a);
            break;

        case 6:
            printf("Enter a number: ");
            scanf("%f", &a);
            printf("Cube = %.2f", a * a * a);
            break;

        case 7:
            printf("Enter a number: ");
            scanf("%f", &a);
            if (a < 0)
                printf("Square root of negative number not possible");
            else
                printf("Square Root = %.2f", sqrt(a));
            break;

        case 8:
            printf("Enter base and power: ");
            scanf("%f %f", &a, &b);
            printf("Result = %.2f", pow(a, b));
            break;

        case 9:
            printf("Enter a number: ");
            scanf("%f", &a);
            if (a < 0)
                printf("Absolute Value = %.2f", -a);
            else
                printf("Absolute Value = %.2f", a);
            break;

        default:
            printf("Invalid choice");
    }

    return 0;
}
